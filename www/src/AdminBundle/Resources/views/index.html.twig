{% extends 'AdminBundle::admin.html.twig' %}

{% block body %}

    <script type="text/javascript" charset="utf-8">

        var mainMenuData = {{ mainMenuData|raw }},
                paths = {
                    adminUsers: "{{ path('admin_users') }}",
                    adminLicensees: "{{ path('admin_licensees') }}",
                    adminAuthors: "{{ path('admin_authors') }}",
                    adminTopics: "{{ path('admin_topics') }}",
                    adminStories: "{{ path('admin_stories') }}",
                    adminFormSave: "{{ path('admin_formsave') }}",
                    adminFormDel: "{{ path('admin_formdel') }}"
                };

        webix.ui({
            rows: [
                {
                    view: "template",
                    type: "header", template: "Dembelo Admin Area"
                },
                {
                    cols: [
                        {
                            id: "mainnav",
                            view: "tree",
                            gravity: 0.2,
                            select: true,
                            data: mainMenuData
                        },
                        {view: "resizer"},
                        {
                            rows: [
                                {
                                    fitBiggest:true,
                                    multiview: true,
                                    cells: [
                                        {
                                            id: "userstuff",
                                            cols: [
                                                {
                                                    rows: [
                                                        dembeloAdmin.getToolbar('user'),
                                                        {
                                                            id: "usergrid",
                                                            view: "datatable",
                                                            autoConfig: true,
                                                            select: true,
                                                            datatype: "json"
                                                        }
                                                    ]
                                                },
                                                {
                                                    view: "form",
                                                    id: "userform",
                                                    gravity: 0.5,
                                                    elements: [
                                                        {view: "text", name: "email", label: "Email", validate:webix.rules.isEmail},
                                                        {view: "combo", name: "roles", label: "Rolle", options: ["ROLE_ADMIN", "ROLE_USER"], validate:webix.rules.isNotEmpty},
                                                        {view: "text", name: "password", type:"password", label:"Passwort"},
                                                        {view: "button", value:"Speichern", click:"dembeloAdmin.formsave('user')" }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            id: "licenseestuff",
                                            cols: [
                                                {
                                                    rows: [
                                                        dembeloAdmin.getToolbar('licensee'),
                                                        {
                                                            id: "licenseegrid",
                                                            view: "datatable",
                                                            autoConfig: true,
                                                            select: true,
                                                            datatype: "json"
                                                        }
                                                    ]
                                                },
                                                {
                                                    view: "form",
                                                    id: "licenseeform",
                                                    gravity: 0.5,
                                                    elements: [
                                                        {view: "text", name: "name", label: "Name", validate:webix.rules.isNotEmpty},
                                                        {view: "button", value:"Speichern", click:"dembeloAdmin.formsave('licensee')" }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            id: "authorgrid",
                                            view: "datatable",
                                            autoConfig: true,
                                            select: true,
                                            datatype: "json"
                                        },
                                        {
                                            id: "topicgrid",
                                            view: "datatable",
                                            autoConfig: true,
                                            select: true,
                                            datatype: "json"
                                        },
                                        {
                                            id: "storygrid",
                                            view: "datatable",
                                            autoConfig: true,
                                            select: true,
                                            datatype: "json"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        });

        dembeloAdmin.init();

    </script>

{% endblock %}